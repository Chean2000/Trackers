<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 어노테이션 처리 -->
	<context:component-scan base-package="com.mycompany.view"/>
	
	<!-- 파일 업로드 추가 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="-1"/>
	</bean>

	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/products.do">product</prop>
				<prop key="/st-inquiry.do">product</prop>
				<prop key="/product-single.do">product</prop>
				<prop key="/creators.do">product</prop>
				<prop key="/signin-modal.do">product</prop>
				<prop key="/signup-modal.do">product</prop>
				<prop key="/store-create-modal.do">product</prop>
				<prop key="/co-main.do">product</prop>
				<prop key="/st-main.do">product</prop>
				<prop key="/cart.do">product</prop>
				<prop key="/purchase-history.do">product</prop>
				<prop key="/insert-review.do">product</prop>
				<prop key="/inquiry-history.do">product</prop>
				<prop key="/product-inquiry.do">product</prop>
				<prop key="/customer-inquiry.do">product</prop>
				<prop key="/user-modify.do">product</prop>
				<prop key="/user-pwd-modify.do">product</prop>
				<prop key="/news.do">product</prop>
				<prop key="/sales-status.do">product</prop>
				<prop key="/product-management.do">product</prop>
				<prop key="/calculate-history.do">product</prop>
				<prop key="/review-management.do">product</prop>
				<prop key="/review-management-form.do">product</prop>
				<prop key="/inquiry-management.do">product</prop>
				<prop key="/inquiry-management-form.do">product</prop>
				<prop key="/notice-management.do">product</prop>
				<prop key="/store-management.do">product</prop>
				<prop key="/post.do">product</prop> 
				<prop key="/insert-product.do">product</prop> 
				<prop key="/notice-popup.do">product</prop> 
				<prop key="/customer-center.do">product</prop> 
				<prop key="/notice-popup-form.do">product</prop> 
				<prop key="/customer-center-form.do">product</prop> 
				<prop key="/insert-test.do">product</prop> 
				<prop key="/profile.do">product</prop> 
				<prop key="/product-img.do">productImg</prop>
			</props>
		</property>
	</bean>

	<bean id="product" class="com.teamproject.trackers.TmpHandler"></bean>
	<bean id="productImg" class="com.teamproject.trackers.biz.product.ProductDetailController"></bean>
	

</beans>